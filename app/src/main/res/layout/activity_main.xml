<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="259dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"

        >
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="91dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="top"
            app:srcCompat="@drawable/logo_ummto" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="142dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Université Mouloud Mammeri"
            android:textSize="15dp" />

        <TextClock
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:gravity="bottom" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:text="veuiller Saisir Vos Informations "
        android:textColor="@color/blue"
        android:textSize="18dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp">


        <EditText
            android:id="@+id/name"
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="-4dp"
            android:layout_toRightOf="@+id/nameLabel"
            android:inputType="text" />

        <TextView
            android:id="@+id/nameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/name"
            android:text="Nom : " />

        <EditText
            android:id="@+id/surname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_alignLeft="@+id/name"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/nameLabel"
            android:inputType="text" />


        <TextView
            android:id="@+id/surnameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/surname"
            android:text="Prénom :" />

        <EditText
            android:id="@+id/Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/surname"
            android:layout_alignLeft="@+id/surname"
            android:layout_alignParentRight="true"
            android:inputType="textEmailAddress" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/Email"
            android:text="Mail :" />

        <EditText
            android:id="@+id/Phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Email"
            android:layout_alignLeft="@id/Email"
            android:layout_alignParentRight="true"
            android:inputType="phone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/Phone"
            android:text="Tel :" />

        <Spinner
            android:id="@+id/myspinner"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Phone"
            android:layout_alignLeft="@id/Phone"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/spinner"


            />

        <TextView

            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Phone"
            android:text="Wilaya :" />


    </RelativeLayout>
    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="164dp"
        android:layout_height="43dp"

        android:background="@drawable/inscription" />


</LinearLayout>

